@model IEnumerable<HistoriasClinicas.Models.Epicrisis>

@{
    ViewData["Title"] = "Index";
}

<h1>Indice</h1>

<p>
    <a asp-action="Create">Crear nueva epicrisis</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HistoricaClinicaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraCarga)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnostico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HistoricaClinicaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraCarga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnostico)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EpicrisisId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.EpicrisisId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.EpicrisisId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
